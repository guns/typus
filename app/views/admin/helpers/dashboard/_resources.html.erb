<% if resources.any? %>

  <table>

    <thead>
      <tr>
        <th><%= _t("Resources") %></th>
      </tr>
    </thead>

    <% resources.each do |resource| %>
      <tr class="<%= cycle("even", "odd") %>">
        <td><%= link_to _t(resource.titleize.capitalize), :controller => "/admin/#{resource.underscore}" %></td>
      </tr>
    <% end %>

  </table>

<% end %>
